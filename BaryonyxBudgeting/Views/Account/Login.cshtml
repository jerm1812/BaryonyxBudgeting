@model BaryonyxBudgeting.Models.ViewModels.LoginViewModel

@{
    Layout = "_LoginLayout";
    ViewBag.Title = "Register";
}
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Sign In</h5>
                    <form class="form-signin" method="post">
                        <div class="form-label-group">
                            <div><span asp-validation-for="UserName"></span></div>
                            <input asp-for="UserName" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
                            <label asp-for="UserName">Username</label>
                        </div>

                        <div class="form-label-group">
                            <div><span asp-validation-for="Password"></span></div>
                            <input asp-for="Password" id="inputPassword" class="form-control" placeholder="Password" required>
                            <label asp-for="Password">Password</label>
                        </div>

                        <div class="custom-control custom-checkbox mb-3">
                            <input type="checkbox" class="custom-control-input" id="customCheck1">
                            <label class="custom-control-label" for="customCheck1">Remember password</label>
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>
                        <hr class="my-4">
                        <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fab fa-google mr-2"></i> Sign in with Google</button>
                        <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i class="fab fa-facebook-f mr-2"></i> Sign in with Facebook</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<h1 class="text-dark text-center">User Registration</h1>

<form asp-action="Login" method="post">
           <div asp-validation-summary="ModelOnly"></div>
           <div class="row py-sm-2">
               <div class="col-sm-12 align-self-end">
                   <div class="form-group">
                       <div><span asp-validation-for="UserName" class="text-danger"></span></div>
                       <div class="input-group">
                           <div class="input-group-prepend"><div class="input-group-text"><i class="fa fa-user"></i></div></div>
                           <input asp-for="UserName" class="form-control" placeholder="Username" />
                       </div>
                   </div>
               </div>
           </div>
           <div class="row py-sm-2">
               <div class="col-sm-12 align-self-end">
                   <div class="form-group">
                       <div><span asp-validation-for="Password" class="text-danger"></span></div>
                       <div class="input-group">
                           <div class="input-group-prepend"><div class="input-group-text"><i class="fa fa-lock"></i></div></div>
                           <input asp-for="Password" class="form-control" placeholder="Password" />
                       </div>
                   </div>
               </div>
           </div>
           <div class="row py-2">
               <div class="col-6 text-right">
                   <a class="btn btn-sm btn-info" asp-controller="Account" asp-action="Register">Signup</a>
               </div>
               <div class="col-6">
                   <button type="submit" class="btn btn-sm btn-primary">Login</button>
               </div>
           </div>
       </form>