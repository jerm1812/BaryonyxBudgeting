@model Budgets.Models.Budget

<section id="create_budget_section" class="item mx-auto mt-3 p-3 px-3" style="width: 40%;">
    <header class="row">
        <div class="col">
            <h2 class="">Create A New Budget</h2>
        </div>
    </header>
    <div id="form_container" data-url="@Url.Action("UpdateBudget", "Budget")" class="row m-auto">
        @using (Html.BeginForm("UpdateBudget", "Budget", FormMethod.Post, new {id = "create_budget_form", @class = "w-100"}))
        {
            <div class="row m-auto">
                <div class="form-group col-6">
                    @Html.LabelFor(m => m.Title)
                    @Html.ValidationMessageFor(m => m.Title, "", new {@class = "text-danger"})
                    @Html.TextBoxFor(m => m.Title, new {@class = "form-control"})
                </div>

                <div class="form-group col-6">
                    @Html.ValidationMessageFor(m => m.Total, "", new {@class = "text-danger"})
                    @Html.LabelFor(m => m.Total)
                    @Html.TextBoxFor(m => m.Total, new {@class = "form-control"})
                </div>
            </div>

            <div id="category_section">
                <div class="row m-auto category-0">
                    <div class="form-group col-3">
                        @Html.ValidationMessageFor(m => m.Categories[0].Title, "", new {@class = "text-danger"})
                        @Html.LabelFor(m => m.Categories[0].Title)
                        @Html.TextBoxFor(m => m.Categories[0].Title, new {@class = "form-control"})
                    </div>

                    <div class="form-group col-3">
                        @Html.ValidationMessageFor(m => m.Categories[0].Total, "", new {@class = "text-danger"})
                        @Html.LabelFor(m => m.Categories[0].Total)
                        @Html.TextBoxFor(m => m.Categories[0].Total, new {@class = "form-control"})
                    </div>

                    <div class="form-group col-3">
                        @Html.ValidationMessageFor(m => m.Categories[0].Type, "", new {@class = "text-danger"})
                        @Html.LabelFor(m => m.Categories[0].Type)
                        @Html.DropDownListFor(m => m.Categories[0].Type, new List<SelectListItem>() {new SelectListItem() {Value = "0", Text = "Amount"}, new SelectListItem() {Value = "1", Text = "Percent"}}, new {@class = "form-control"})
                    </div>

                    <div class="form-group col-3 mt-auto text-center">
                        <button id="category_btn_0" type="button" class="btn btn-danger remove-category mx-auto">Remove</button>
                    </div>
                </div>

            </div>

            <div class="row m-auto">
                <div class="col">
                    <buttton id="add_category" type="button" class="btn btn-default">Add Category</buttton>
                </div>
            </div>

            <div class="row">
                <div class="col offset-7">
                    <button id="cancel_btn" type="button" class="btn btn-danger">Cancel</button>
                    <input type="submit" id="createBudget" class="btn btn-primary" value="Create Budget"/>
                </div>
            </div>
        }
    </div>
    <script src="js/create-budget.js"></script>
</section>