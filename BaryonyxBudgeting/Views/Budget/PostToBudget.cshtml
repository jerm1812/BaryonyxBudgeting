@model Budgets.Models.Post

<!-- Modal -->
<div class="modal fade" id="post_modal" tabindex="-1" role="dialog" aria-labelledby="postModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <section class="card">
                <div class="card-top-small text-center">
                    <div class="card-icon text-center">
                        <i class="fas fa-folder-plus fa-3x"></i>
                    </div>
                    <h3>Post To Budget</h3>
                </div>
                <div class="card-body">
                    <h4 id="post_category_name">Test Category</h4>
                    <div id="post_form_container" data-url="@Url.Action("PostToBudget", "Budget")" class="row m-auto">
                        @using (Html.BeginForm("PostToBudget", "Budget", FormMethod.Post, new {id = "create_post_form", @class = "w-100"}))
                        {
                            <div class="row m-auto">
                                <div class="form-group col-6">
                                    @Html.LabelFor(m => m.Title)
                                    @Html.ValidationMessageFor(m => m.Title, "", new {@class = "text-danger"})
                                    @Html.TextBoxFor(m => m.Title, new {@class = "form-control", id = "post_title_input"})
                                </div>

                                <div class="form-group col-6">
                                    @Html.ValidationMessageFor(m => m.Amount, "", new {@class = "text-danger"})
                                    @Html.LabelFor(m => m.Amount)
                                    @Html.TextBoxFor(m => m.Amount, new {@class = "form-control", id = "post_total_input"})
                                </div>


                            </div>

                            <div class="row m-auto">
                                <div class="form-group col-12">
                                    @Html.ValidationMessageFor(m => m.Notes, "", new {@class = "text-danger"})
                                    @Html.LabelFor(m => m.Notes)
                                    @Html.TextBoxFor(m => m.Notes, new {@class = "form-control", id = "post_notes_input"})
                                </div>
                            </div>

                            <hr/>

                            <div class="float-right">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                                <input id="post_to_budget_btn" type="submit" class="btn btn-primary" value="Post"/>
                            </div>
                        }
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>