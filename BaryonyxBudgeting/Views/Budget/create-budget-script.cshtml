<script>
 $(function() {
  RegisterEvents();
 });
 
 function RegisterEvents() {
  $('#createBudget').click(CreateBudget);
 }
 
 function CreateBudget() {
  let form = $('#createBudgetForm');
  $.validator.unobtrusive.parse(form);
  form.submit(function() {
   if (form.valid()) {
    $.ajax({
     url: "UpdateBudget",
     type: "POST",
     data: $(this).serialize(),
     success: function () {
      console.log("success");
     }
    })
   }
  })
 }
</script>