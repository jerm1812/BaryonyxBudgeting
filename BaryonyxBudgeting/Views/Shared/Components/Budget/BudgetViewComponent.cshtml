<div class="row">
    <div class="col-6 offset-3 mb-5">
        <div class="card">
            <div class="card-top">
                <div class="card-icon text-center">
                    <i class="fa fa-table fa-3x"></i>
                </div>
                <h3>Income</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <p>Estimated: @Model.AbbreviateTotal()</p>
                    </div>
                    <div class="col-5">
                        <p>To Date: TEST</p>
                    </div>
                    <div class="col-1">
                        <button id="details" type="button" class="float-right btn btn-warning post-btn">Details</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    @foreach (var category in Model.Categories)
    {
        <div class="col-md-6 mb-5">
            <div class="card">
                <div class="card-top">
                    <div class="card-icon text-center">
                        <i class="fa fa-table fa-3x"></i>
                    </div>
                    <h3>@category.Title</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <p>Allocated: @category.AbbreviateTotal()</p>
                        </div>
                        <div class="col-5">
                            <p>Posted: @category.TotalPosted()</p>
                        </div>
                        <div class="col-1">
                            <button id="post-@category.Id" type="button" class="float-right btn btn-warning post-btn">Post</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>